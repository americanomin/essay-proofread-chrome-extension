{
  "name": "Essay Proofread",
  "version": "0.1",
  "description": "Analyze and suggest improvements for essay using OpenAI's API",
  "manifest_version": 3,
  "permissions": [
    "tabs",
    "storage"
  ],
  "host_permissions": [
    "https://*.openai.com/*",
    "https://*.tistory.com/*"
  ],
  "action": {
    "default_popup": "options.html"
  },
  "content_scripts": [
    {
      "matches": [
        "https://*.tistory.com/*"
      ],
      "js": [
        "content-script.js"
      ]
    }
  ],
  "background": {
    "service_worker": "background.js"
  }
}
